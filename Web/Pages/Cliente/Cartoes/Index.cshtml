@page
@model Web.Pages.Cliente.Cartoes.IndexModel
@{
    ViewData["Title"] = "Cartões";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <h4 class="display-4">Endereços</h4>
            <div class="list-group mt-4">
                @if (Model.Cartoes != null)
                {
                    @foreach (var c in Model.Cartoes)
                    {
                        <div class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h4>@c.Apelido</h4>
                            </div>
                            <div class="d-flex w-100 justify-content-between">
                                <h5>@c.NomeDoTitular - @c.Numero</h5>
                            </div>
                            <div class="d-flex w-100 justify-content-between">
                                <span>@c.Tipo - @c.Bandeira</span>
                            </div>
                            <div>
                                @if (c.Selecionado)
                                {
                                    <span class="badge badge-primary">Selecionado</span>
                                }
                            </div>
                            <div class="text-right">
                                @if (!c.Selecionado)
                                {
                                    <form method="post">
                                        <button asp-page-handler="Selecionar" asp-route-cartaoId="@c.CartaoId" class="btn btn-sm btn-primary">Selecionar</button>
                                    </form>
                                }
                            </div>
                        </div>
                    }
                }
                <div class="row">
                    <div class="col-12 d-flex w-100 justify-content-between">
                        <button class="w-100 btn btn-toolbar btn-primary" style="margin-top: 2rem">Novo Cartão</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <a href="~/Cliente/Area" class="btn btn-secondary float-right" style="margin-top: 2rem">Voltar</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-2"></div>
    </div>
</div>

